{
  "name": "starter.nodejs",
  "version": "1.8.0",
  "description": "Starter kit for NodeJS",
  "author": "Abraham TEWA",
  "license": "MIT",
  "homepage": "https://abrahamtewa.github.io/starter.nodejs",
  "bugs": "https://github.com/AbrahamTewa/starter.nodejs/issues",
  "private": true,
  "bin": {
    "hello": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "gulp build",
    "clean": "gulp clean",
    "doc:jsdoc": "jsdoc -c jsdoc.config.json --readme README.md",
    "lint": "run-s lint:*",
    "lint:javascript": "eslint .",
    "lint:markdown": "remark . --quiet --frail",
    "semantic-release": "semantic-release",
    "start": "node dist/cli.js",
    "start:src": "node --inspect --require @babel/register src/cli.js",
    "start:brk": "node --inspect-brk --require @babel/register src/cli.js",
    "test": "gulp clean:report:tests:unit && mocha src/**/*.spec.js --opts mocha.opts",
    "test-cov": "gulp clean:report:tests:unit && cross-env NODE_ENV=test nyc mocha src/**/*.spec.js --opts mocha.opts",
    "update:reference": "jsdoc2md -c jsdoc.config.json --files src > docs/REFERENCE.md"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AbrahamTewa/starter.nodejs.git"
  },
  "dependencies": {
    "better-console": "^1.0.1",
    "yargs": "^13.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.0",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "babel-plugin-istanbul": "^5.1.3",
    "chai": "^4.2.0",
    "chai-jest-snapshot": "^2.0.0",
    "cross-env": "^5.2.0",
    "del": "^4.1.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "faker": "^4.1.0",
    "gulp": "^4.0.1",
    "gulp-babel": "^8.0.0",
    "gulp-cli": "^2.2.0",
    "gulp-sourcemaps": "^2.6.5",
    "jsdoc": "^3.4.3",
    "jsdoc-oblivion": "0.0.9",
    "minami": "^1.1.1",
    "mocha": "^6.1.4",
    "mocha-multi-reporters": "^1.1.7",
    "mochawesome": "^3.1.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.0.0",
    "proxyquire": "^2.1.0",
    "remark-cli": "^6.0.1",
    "remark-preset-lint-recommended": "^3.0.2",
    "semantic-release": "^15.13.12",
    "sinon": "^7.3.2",
    "source-map-support": "^0.5.12"
  }
}

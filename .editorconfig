# EditorConfig is awesome: http://EditorConfig.org
# top-most EditorConfig file
root = true

[*]
insert_final_newline = true
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 4

[*.{json,yml}, .babelrc, .remarkrc, .stylelintrc]
indent_size = 4

[package.json]
indent_size = 2

[*.md]
indent_size = 2
